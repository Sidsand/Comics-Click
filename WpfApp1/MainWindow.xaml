<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Comics Click" Height="720" Width="1280" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize">
    <Grid Margin="0,0,2,0" RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FF7E7E7E" Offset="0.464"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image Source="1.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="278,0,-278,0"/>
        <Frame x:Name="Frame" Content="Frame" HorizontalAlignment="Left" Height="720" Margin="443,0,0,0" VerticalAlignment="Top" Width="835"/>
        <Label x:Name="sh" Content="0 кл." Margin="86,10,835,0" Height="85" FontFamily="Showcard Gothic" FontSize="36" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <Label.Background>
                <SolidColorBrush Color="White" Opacity="0.75"/>
            </Label.Background>
        </Label>




        <Image Margin="0,634,1192,0" Source="5aae24241f78846f.png" Stretch="Fill"/>
        <Button x:Name="exit" Content="Button" HorizontalAlignment="Left" Margin="18,650,0,0" VerticalAlignment="Top" Width="50" Height="52" Background="{x:Null}" Foreground="{x:Null}" Click="exit_Click" BorderBrush="{x:Null}"/>

        <StackPanel x:Name="Stack" HorizontalAlignment="Left" Height="620" VerticalAlignment="Top" Width="360" Margin="85,100,0,0">
            <Label x:Name="och" Content="Очков за клики: 1" HorizontalAlignment="Left" Margin="0,32,-3,0" VerticalAlignment="Top" Height="45" Width="363" Background="White" FontStyle="Italic" FontWeight="Bold" Opacity="0.5" FontSize="24"/>
            <TextBox x:Name="apps" HorizontalAlignment="Left" Height="45" Margin="10,9,0,0" TextWrapping="Wrap" Text="1 кл." VerticalAlignment="Top" Width="340" Foreground="#FF3AFF55" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" FontWeight="Bold" FontFamily="Tw Cen MT Condensed Extra Bold" MaxLines="5">
                <TextBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF8006C1" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <Button x:Name="app" Content="" HorizontalAlignment="Left" Margin="85,9                     ,0,0" VerticalAlignment="Top" Width="117" Height="45" Click="App_Click" IsCancel="True" Foreground="Yellow" FontWeight="Bold" FontSize="18">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0" Opacity="0">
                        <GradientStop Color="#FF8006C1" Offset="0"/>
                        <GradientStop Color="#FFFF2828" Offset="1"/>
                        <GradientStop Color="#FF4A0070" Offset="0.359"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="dos" Content="Достижения" HorizontalAlignment="Left" Margin="85,9,0,0" VerticalAlignment="Top" Width="176" Height="37" Click="dos_Click"/>

            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFBDB6FF" Offset="0"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
        </StackPanel>
        <Button x:Name="clik" HorizontalAlignment="Left" Margin="450,0,0,0" VerticalAlignment="Top" Width="828" Height="710" FontFamily="Showcard Gothic" FontSize="72" Click="Clik_Click" Background="{x:Null}">
        </Button>
        <Button x:Name="m1" Content="Button" HorizontalAlignment="Left" Margin="6,110,0,0" VerticalAlignment="Top" Width="75" Height="75" Click="m1_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="6,190,0,0" VerticalAlignment="Top" Width="75" Height="75"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="6,270,0,0" VerticalAlignment="Top" Width="75" Height="75"/>






    </Grid>
</Window>
